    private void adicionarTermo(String termo) {
        if (!termo.isEmpty()) {
            tableTermos.addRow(new Termo(termo, false));
        } else {
            JOptionPane.showMessageDialog(null, "Informe o termo!", "Aviso", JOptionPane.WARNING_MESSAGE);
        }
    }

    public void abrirTelaComArquivoParaProcessamento(File arquivo) throws ErroInternoException {
        try {
            jLArquivo.setText(arquivo.getAbsolutePath());
            ArrayList<Tweet> tweets = Fachada.getINSTANCIA().recuperarTweets(arquivo);
            int numTT = tweets.size();
            jLNumTweets.setText(String.valueOf(numTT));
        } catch (DadoInvalidoException ex) {
            JOptionPane.showMessageDialog(null, ex.getMessage(), "Erro", JOptionPane.ERROR_MESSAGE);
        }
    }

