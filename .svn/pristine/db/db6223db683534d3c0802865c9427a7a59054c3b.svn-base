    private void setarTableModel() {
        tableModel = new TableModelUnirArquivos(jTUnir);
        jTUnir.setModel(tableModel);
        jTUnir.getColumnModel().getColumn(0).setPreferredWidth(400);
        jTUnir.getColumnModel().getColumn(1).setPreferredWidth(100);
    }

    public class TableModelUnirArquivos extends utilitarios.ModeloDeTabelaAbstrato {

        private final String[] colunas = new String[]{"Arquivo", "NÂº Tweets"};

        public TableModelUnirArquivos(JTable tabela) {
            super(tabela);
        }

        @Override
        public int getColumnCount() {
            return this.colunas.length;
        }

        @Override
        public String getColumnName(int column) {
            return this.colunas[column];
        }

        @Override
        public Object getValueAt(int rowIndex, int columnIndex) {
            Arquivo arq = (Arquivo) this.lista.get(rowIndex);
            switch (columnIndex) {
                case 0:
                    return arq.getArquivo();
                case 1:
                    return arq.getNumTweets();
                default:
                    throw new IndexOutOfBoundsException();
            }
        }

        public class Arquivo {

            private String arquivo;
            private Integer numTweets;

            public Arquivo(String arquivo, Integer numTweets) {
                this.arquivo = arquivo;
                this.numTweets = numTweets;
            }

            public String getArquivo() {
                return arquivo;
            }

            public void setArquivo(String arquivo) {
                this.arquivo = arquivo;
            }

            public Integer getNumTweets() {
                return numTweets;
            }

            public void setNumTweets(Integer numTweets) {
                this.numTweets = numTweets;
            }

        }
    }
